
@model LibrarySystem.Models.Cart
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{

    Layout = "~/Views/Shared/AfterLogin.cshtml";

}

<html lang="en">
<head>

    

</head>
<body>   
    <!-- page title -->
    <section class="page-title-section overlay" data-background="../images/home.png">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <ul class="list-inline custom-breadcrumb mb-2">
                        <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="index.html">Home</a></li>
                        <li class="list-inline-item text-white h3 font-secondary nasted">Cart </li>
                    </ul>
                    <p class="text-lighten mb-0">Our courses offer a good compromise between the continuous assessment favoured by some universities and the emphasis placed on final exams by others.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- /page title -->
   


    <!-- start: Cart Section -->
    <body>
        @if (Model != null && Model.CartItems != null && Model.CartItems.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                       
                        <th>Book</th>
                        <th>Title</th>
                       
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                      
                        <tr>
                            <td>
                                <a class="a-cleanup" asp-controller="Home" asp-action="" asp-route-id="@item.Id"><img src="@item.Book.BookImage" style="height: 4em"></a>
                            </td>
                            <td>
                                <a class="a-cleanup" asp-controller="Home" asp-action="" asp-route-id="@item.Id">@item.Book.Title</a>
                            </td>
                          
                            <td>
                                <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.Book.ISBN" class="text-danger"><i class="ti-close"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td class="text-right">
                        </td>
                        <td>
                            <strong></strong>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

            <a class="a-cleanup" asp-controller="Order" asp-action="Checkout"><div class="btn btn-success float-right mr-5">Checkout <i class="fa-solid fa-angles-right"></i></div> </a>
            <a class="a-cleanup" asp-controller="Cart" asp-action="ClearCart"><div class="btn btn-danger float-right mr-5"><i class="fa-solid fa-trash-can"></i> Empty Cart</div> </a>
        }
        else
        {
            <h3 class="text-center">Cart is empty</h3>
        }
    </body>

    <!-- End: Cart Section -->

</body>
</html>