@model LibrarySystem.Models.Service

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutLibrarian.cshtml";
}

<html>
<head>
   
</head>
<body>
    <div class="row service-info">
        <div class="col-md-6">
            <h4> Service </h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
               
            </dl>
        </div>

        
    </div>

    <div class="row mt-3 service-info">
        <div class="col-md-12 text-center">
            <a asp-controller="Service" asp-action="Index" class="btn btn-primary"><i class="ti-more-alt"></i>Back</a> |
            <a asp-action="Edit" asp-route-id="@Model?.ServiceId" class="btn btn-warning"><i class="ti-more-alt"></i>Edit</a>
        </div>
    </div>
</body>
</html>
