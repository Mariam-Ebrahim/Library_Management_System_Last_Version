@model Service

@{
    ViewData["Title"] = "Create";
    Layout = Layout = "~/Views/Shared/_LayoutLibrarian.cshtml";
}

<html>
<head>
    <!-- Add your head content here -->
    <style>
        .form-container {
            margin-left: 20px; /* Adjust the margin as needed */
        }
    </style>

    <h>New service</h>
</head>
<body>
    <div class="row">
        <div class="col-md-4 form-container">
            <form asp-action="Create" method="post" style="background-color: white; padding: 20px; border-radius: 8px;">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required minlength="2"  />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ServiceImage" class="control-label"></label>
                    <input asp-for="ServiceImage" class="form-control" />
                    <span asp-validation-for="ServiceImage" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" cols=40 rows=5 required minlength="10"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <a asp-controller="Service" asp-action="Index" class="btn btn-primary"><i class="ti-angle-left"></i>Back</a>
                    <input type="submit" value="Create" class="btn btn-primary btn-success" />
                </div>
            </form>
          
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
