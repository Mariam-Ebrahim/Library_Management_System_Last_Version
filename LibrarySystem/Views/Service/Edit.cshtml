@model LibrarySystem.Models.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLibrarian.cshtml";
}

<html>
<head>
    <!-- Add your head content here -->
    <style>
        .book-info {
            margin-left: 30px; /* Adjust the margin as needed */
        }
    </style>
    <h1>Edit</h1>
    <h4>Service</h4>
</head>
<body>

    <hr />
    <div class="row">
        <div class="col-md-4 book-info">
            <form asp-action="Edit" style="background-color: white; padding: 20px; border-radius: 8px;">
                <div class="form-group">
                    <label asp-for="ServiceId" class="control-label"></label>
                    <input asp-for="ServiceId" class="form-control" />
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"  minlength="2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ServiceImage" class="control-label"></label>
                    <input asp-for="ServiceImage" class="form-control" />
                    <span asp-validation-for="ServiceImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" cols=40 rows=5  minlength="10"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a asp-controller="Service" asp-action="Index" class="btn btn-primary"><i class="ti-angle-left"></i>Back</a>
                    <input type="submit" value="Edit" class="btn btn-primary btn-success" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
