@model LibrarySystem.Models.Service

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutLibrarian.cshtml";
}

<h1>Delete</h1>
<h4>Service</h4>
<div>
    <h4>Book</h4>
    <h3>Are you sure you want to delete this Service?</h3>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-3">Service Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
 </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ServiceId" />
        <a asp-action="Index" class="btn btn-primary"><i class="ti-angle-left"></i>Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
