@{
    Layout = "~/Views/Shared/BeforeLogin.cshtml";
}

<html lang="en">

<body>
    <!-- preloader start -->
    <div class="preloader">
        <img src="~/images/preloader.gif" alt="preloader">
    </div>
    <!-- preloader end -->   
<!-- page title -->
    <section class="page-title-section overlay" data-background="../images/books.png">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <ul class="list-inline custom-breadcrumb mb-2">
                        <li class="list-inline-item"><a class="h2 text-primary font-secondary" asp-controller="Home" asp-action="Index">Home</a></li>
          <li class="list-inline-item text-white h3 font-secondary nasted">Log in</li>
        </ul>
                    <p class="text-lighten mb-0">A great book should leave you with many experiences, and slightly exhausted at the end. You live several lives while reading. </p>
      
      </div>
    </div>
  </div>
</section>

<!-----Log in ----->

   <!-- Modal -->
   <section class="section bg-gray">
   <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="section-title">Enter Your Information</h2>
      </div>
    </div>
      <div class="row">
            <div class="col-lg-7 mb-4 mb-lg-0">
                    <form method="POST" asp-action="Login" >
                    <div class="col-12 mb-3">
                            <label for="loginBarcode" class="form-label left-aligned-label">Barcode</label>
                        <input type="text" class="form-control" id="loginBarcode" name="Barcode" placeholder="Enter your barcode" asp-for="@Model.Barcode" required >
                            <span asp-validation-for="@Model.Barcode" class="text-danger"></span>
                        </div>
                    <div class="col-12 mb-3">
                            <label for="loginPassword" class="form-label left-aligned-label">Password</label>
                        <input type="password" class="form-control" id="loginPassword" name="Password" placeholder="Enter your password" asp-for="Password" required minlength="4">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" >LOGIN</button>
                    </div>
                        <label class="alert-danger">@ViewData["Error"]</label>

                </form>
                    <p class="toggle-link">Don't have an account? <a asp-controller="Authentication" asp-action="Register" style="color: orange;">Register</a></p>   
            </div>
        </div>
    </div>
</section>
</body>
</html>
