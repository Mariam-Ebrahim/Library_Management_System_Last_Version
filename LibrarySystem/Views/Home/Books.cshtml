    <!--------------------------------------------------------search--------------------------------------->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <form asp-action="Books" class="my-1 p-2">
                    <div class="input-group">
                        <input type="text" name="searchString" placeholder="Title or Author" class="form-control" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">Search</button>
                            <a asp-action="Books" class="btn btn-secondary">Clear</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--------------------------------------------------------search--------------------------------------->

    <!-- courses -->
    <section class="section">
        <div class="container">
            <!-- course list -->
            <div class="row justify-content-center">
                <!-- course item -->
                @foreach (var book in Model)
                {
                    <div class="col-lg-4 col-sm-6 mb-5">
                        <div class="card p-0 border-primary rounded-0 hover-shadow" style="width:100%">
                            <img class="card-img-top rounded-0" src=@book.BookImage>
                            <div class="card-body">
                                <ul class="list-inline mb-2">
                                </ul>
                                <a href="course-single.html">
                                    <h4 class="card-title">@book.Title</h4>
           
                                </a>
                                <p class="card-text mb-4">
                                    @book.Descripttion
                                </p>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.ISBN" class="btn btn-primary float-right store-btn"><i class="fa-solid fa-cart-plus"></i>Reserve Now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
